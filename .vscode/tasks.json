      "command": "docker",
      "args": ["build", "--tag", "grafana_collector_local_image:latest", ".\\grafana_collector_container\\"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "run grafana-collector local image",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "-f", ".\\grafana_collector_container\\docker-compose.yaml", "up"],
      "dependsOn": ["buld grafana-collector local image"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
